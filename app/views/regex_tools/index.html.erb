<div class="max-w-lg mx-auto" data-controller="regex-tools">
  <div>
    <label for="text" class="block text-sm font-medium text-gray-700 mb-1">Digite seu texto:</label>
    <textarea id="text"
              data-regex-tools-target="text"
              class="w-full h-48 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="Digite seu texto aqui..."></textarea>
  </div>

  <div class="text-center mt-4">
    <button type="button"
            data-action="click->regex-tools#count"
            class="px-4 py-2 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
      Contar Caracteres
    </button>
  </div>

  <div class="mt-4 text-gray-800 font-semibold" data-regex-tools-target="result"></div>
</div>
